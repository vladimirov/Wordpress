<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="UI Tests">

    <parameter name="pdfngreport-properties" value="src/main/resources/pdfngreport.properties" />

    <listeners>
        <listener class-name="com.uttesh.pdfngreport.PDFReportListener" />
    </listeners>

<test name="All Tests In Chrome">
    <parameter name="browser" value="chrome"/>
    <classes>
        <class name="ui.ConsoleErrorsTest"> </class>
        <class name="ui.FaviconTest"> </class>
        <class name="ui.PageSpeedApiTest"> </class>
        <class name="ui.TaglineTextTest"> </class>
        <class name="ui.ThemeScreenshotTest"> </class>
        <class name="ui.DefaultPagesTest"> </class>
    </classes>
</test>
</suite>